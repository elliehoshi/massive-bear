<div class="portfolio-header <%= piece_name%>">
<%= partial "anchor-nav" %>
  <div class="header-overlay">
    <div class="header-title">
      <h1><%= piece.title %></h1>

      <p><%= piece.category %></p>
    </div>
  </div>
</div>

<div class="portfolio-description mobile-whole small-half medium-half large-half">
  <h1>Description</h1>
  <p><%= piece.description %></p>
</div>

<div class="portfolio-description mobile-whole small-half medium-half large-half">
  <h1>Tools Used</h1>
  <ul class="tools">
    <%= piece.tools %>
  </ul>
</div>

<% piece.images.each_with_index do |image, index| %>
  <% if index > 0 %>
    <%= image_tag "#{image.url}", :class => "portfolio-full-image"%>
  <% end %>
<% end %>


<%= partial "anchor-footer" %>